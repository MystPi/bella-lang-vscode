{
  "name": "bella-lang",
  "displayName": "Bella Lang",
  "description": "Syntax highlighting for the Bella programming language",
  "version": "0.3.0",
  "publisher": "mystpi",
  "icon": "./images/bella-logo.png",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "bella",
        "aliases": [
          "Bella",
          "bella"
        ],
        "extensions": [
          ".bella"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bella",
        "scopeName": "source.bella",
        "path": "./syntaxes/bella.tmLanguage.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mystpi/bella-lang-vscode.git"
  }
}
